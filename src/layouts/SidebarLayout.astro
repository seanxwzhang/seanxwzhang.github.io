---
import { ClientRouter } from 'astro:transitions';
import '../styles/transitions.css';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title: string;
  description?: string;
  currentSlug?: string;
}

const { title, description = 'Learning, thinking, and writing.', currentSlug } = Astro.props;
const siteTitle = 'Steady State';
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Sean Zhang" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet" />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content={siteTitle} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@seeeeaaaannnnnn" />

    <title>{fullTitle}</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-cream-100 bg-grid-pattern text-ink">
    <!-- Sidebar -->
    <Sidebar currentSlug={currentSlug} />

    <!-- Main Content -->
    <div class="main-content" id="main-content" style="view-transition-name: post-content">
      <main class="mx-auto max-w-3xl px-4 py-8 sm:px-6 lg:px-8">
        <slot />
      </main>

      <footer class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 mt-16 border-t border-cream-300 pt-8 text-center text-sm text-ink-muted">
        <p>&copy; {new Date().getFullYear()} Sean Zhang. All rights reserved.</p>
        <p class="mt-2">
          <a href="https://twitter.com/seeeeaaaannnnnn" class="hover:text-coral transition-colors">Twitter</a>
          {' '}&middot;{' '}
          <a href="https://github.com/seanxwzhang" class="hover:text-coral transition-colors">GitHub</a>
          {' '}&middot;{' '}
          <a href="mailto:sz@seanzhang.me" class="hover:text-coral transition-colors">Email</a>
        </p>
      </footer>
    </div>

    <script is:inline>
      (function() {
        const mainContent = document.getElementById('main-content');
        if (!mainContent) return;

        // Check localStorage for saved sidebar state on load
        const isCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';
        if (isCollapsed) {
          mainContent.classList.add('sidebar-collapsed');
        }
      })();
    </script>
  </body>
</html>

<style is:global>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Selection color */
  ::selection {
    background-color: rgba(224, 122, 95, 0.2);
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: #D4D1C9;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #B8B5AD;
  }
</style>

<style>
  .main-content {
    margin-left: 280px;
    min-height: 100vh;
    transition: margin-left 0.3s ease;
  }

  .main-content.sidebar-collapsed {
    margin-left: 0;
  }

  /* Mobile: No sidebar offset */
  @media (max-width: 1024px) {
    .main-content {
      margin-left: 0;
      padding-bottom: 72px; /* Space for collapsed sidebar peek */
    }

    .main-content.sidebar-collapsed {
      padding-bottom: 0;
    }
  }
</style>
