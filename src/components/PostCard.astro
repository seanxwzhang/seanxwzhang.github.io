---
interface Props {
  title: string;
  slug: string;
  date: Date;
  description?: string;
  tags?: string[];
  variant?: 'default' | 'compact';
}

const { title, slug, date, description, tags = [], variant = 'default' } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

{variant === 'default' ? (
  <article class="group">
    <a
      href={`/blog/${slug}`}
      class="block"
      style={`view-transition-name: post-${slug}`}
    >
      <div class="rounded-xl bg-white p-6 shadow-sm border border-cream-200 hover:shadow-md hover:border-coral/30 transition-all">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-2">
          <h3 class="font-serif text-xl font-medium text-ink group-hover:text-coral transition-colors">
            {title}
          </h3>
          <time datetime={date.toISOString()} class="text-sm text-ink-muted shrink-0">
            {formattedDate}
          </time>
        </div>
        {description && (
          <p class="text-ink-light text-sm line-clamp-2">
            {description}
          </p>
        )}
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-3">
            {tags.slice(0, 3).map((tag: string) => (
              <span class="rounded-full bg-cream-200 px-2.5 py-0.5 text-xs text-ink-muted">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </a>
  </article>
) : (
  <a
    href={`/blog/${slug}`}
    class="block group px-3 py-2 rounded-lg hover:bg-cream-200/50 transition-colors"
    style={`view-transition-name: sidebar-post-${slug}`}
  >
    <h4 class="text-sm font-medium text-ink group-hover:text-coral transition-colors line-clamp-2">
      {title}
    </h4>
    <time datetime={date.toISOString()} class="text-xs text-ink-muted">
      {formattedDate}
    </time>
  </a>
)}
