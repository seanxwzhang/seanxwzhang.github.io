---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const recentPosts = sortedPosts.slice(0, 5);
---

<BaseLayout title="Rabbit Holes">
  <!-- Hero Section -->
  <section class="mb-16">
    <h1 class="font-serif text-4xl font-semibold text-ink mb-4">
      Hi, I'm Sean Zhang
    </h1>
    <p class="text-lg text-ink-light leading-relaxed max-w-2xl">
      Welcome to my corner of the internet. I write about machine learning,
      system engineering, and the occasional rabbit hole I fall into while
      learning something new.
    </p>
  </section>

  <!-- Recent Posts -->
  <section>
    <h2 class="font-serif text-2xl font-semibold text-ink mb-8">Recent Posts</h2>
    <div class="space-y-6">
      {recentPosts.map((post) => {
        const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
        });
        return (
          <article class="group">
            <a href={`/blog/${post.slug}`} class="block">
              <div class="rounded-xl bg-white p-6 shadow-sm border border-cream-200 hover:shadow-md hover:border-coral/30 transition-all">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-2">
                  <h3 class="font-serif text-xl font-medium text-ink group-hover:text-coral transition-colors">
                    {post.data.title}
                  </h3>
                  <time datetime={post.data.date.toISOString()} class="text-sm text-ink-muted shrink-0">
                    {formattedDate}
                  </time>
                </div>
                {post.data.description && (
                  <p class="text-ink-light text-sm line-clamp-2">
                    {post.data.description}
                  </p>
                )}
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-3">
                    {post.data.tags.slice(0, 3).map((tag: string) => (
                      <span class="rounded-full bg-cream-200 px-2.5 py-0.5 text-xs text-ink-muted">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          </article>
        );
      })}
    </div>

    {sortedPosts.length > 5 && (
      <div class="mt-8 text-center">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 rounded-full bg-coral px-6 py-2.5 text-sm font-medium text-white hover:bg-coral-dark transition-colors"
        >
          View all posts
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    )}
  </section>
</BaseLayout>
