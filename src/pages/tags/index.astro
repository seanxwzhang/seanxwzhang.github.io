---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => !data.draft);

// Count tags
const tagCounts = posts.reduce((acc, post) => {
  post.data.tags?.forEach((tag: string) => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

// Sort tags by count
const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);
---

<BaseLayout title="Tags" description="Browse posts by tag">
  <h1 class="font-serif text-4xl font-semibold text-ink mb-8">Tags</h1>

  <div class="flex flex-wrap gap-3">
    {sortedTags.map(([tag, count]) => (
      <a
        href={`/tags/${tag}`}
        class="group flex items-center gap-2 rounded-full bg-white border border-cream-200 px-4 py-2 hover:border-coral hover:bg-coral hover:text-white transition-all"
      >
        <span class="font-medium">{tag}</span>
        <span class="rounded-full bg-cream-200 px-2 py-0.5 text-xs text-ink-muted group-hover:bg-white/20 group-hover:text-white transition-colors">
          {count}
        </span>
      </a>
    ))}
  </div>
</BaseLayout>
